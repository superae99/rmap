FROM node:18-alpine

WORKDIR /app

# Install dependencies for development
RUN apk add --no-cache python3 make g++ curl

# Copy package files
COPY package*.json ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 5001

# Development command with hot reload
CMD ["npm", "run", "dev"]