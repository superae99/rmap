# Production Server Environment Variables (Example)

# Database Configuration
DB_TYPE=mysql
DB_HOST=mysql-prod
DB_PORT=3306
DB_USERNAME=prod_user
DB_PASSWORD=CHANGE_THIS_PRODUCTION_PASSWORD
DB_DATABASE=kakao_map_prod

# JWT Configuration
JWT_SECRET=CHANGE_THIS_PRODUCTION_JWT_SECRET
JWT_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production
PORT=5001
CORS_ORIGIN=https://app.your-domain.com

# Logging
LOG_LEVEL=error
LOG_FORMAT=json

# API Keys (Production)
KAKAO_API_KEY=YOUR_PRODUCTION_KAKAO_API_KEY

# Debug Mode
DEBUG=false
SHOW_SQL=false

# Security
ENABLE_RATE_LIMIT=true
MAX_REQUESTS_PER_MINUTE=100

# Redis Cache
REDIS_HOST=redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD